<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".police.AccueilPoliceActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/pompier"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_marginHorizontal="100dp"
            android:background="@null"
            android:contentDescription="@string/pompier"
            android:onClick="goToPompier"
            android:scaleType="fitCenter"
            android:src="@drawable/pompier_logo" />

        <ImageButton
            android:id="@+id/police"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_marginHorizontal="100dp"
            android:background="@drawable/rounded_gray_background"
            android:contentDescription="@string/police"
            android:onClick="goToPolice"
            android:scaleType="fitCenter"
            android:src="@drawable/policier_logo" />

    </GridLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <Button
                        android:id="@+id/abecedaire"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#1D90DC"
                        android:drawableTop="@drawable/logo_abecedaire"
                        android:drawablePadding="10dp"
                        android:onClick="onClickAbecedaire"
                        android:padding="10dp"
                        android:text="@string/abecedaire"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/abordage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#00B52A"
                        android:drawableTop="@drawable/logo_abordage"
                        android:drawablePadding="10dp"
                        android:onClick="onClickAbordage"
                        android:padding="10dp"
                        android:text="@string/abordage"
                        android:textColor="@color/white" />

                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/documents"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#8153FF"
                        android:drawableTop="@drawable/logo_renseignements"
                        android:drawablePadding="10dp"
                        android:onClick="onClickDocuments"
                        android:padding="10dp"
                        android:text="@string/documents"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/securite_routiere"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#da1a29"
                        android:drawableTop="@drawable/logo_secours_routier"
                        android:drawablePadding="10dp"
                        android:onClick="onClickSecuriteRoutiere"
                        android:padding="10dp"
                        android:text="@string/securite_routiere"
                        android:textColor="@color/white" />

                </TableRow>

                <!--  <TableRow>

                      <Button
                          android:id="@+id/interventions"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_margin="5dp"
                          android:layout_weight="1"
                          android:background="#da1a29"
                          android:drawableTop="@drawable/logo_secours_routier"
                          android:drawablePadding="10dp"
                          android:onClick="onClickSecoursRoutier"
                          android:padding="10dp"
                          android:text="@string/secours_routier"
                          android:textColor="@color/white" />

                  </TableRow> -->

                <Button
                    android:id="@+id/clavier"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/logo_lsf"
                    android:drawablePadding="10dp"
                    android:onClick="onClickClavier"
                    android:padding="10dp"
                    android:text="@string/clavier_lsf" />

            </TableLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
