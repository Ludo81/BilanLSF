<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".police.TelephonePoliceActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TableRow android:layout_weight="1">

            <ImageView
                android:id="@+id/telephone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/telephone" />

            <ImageView
                android:id="@+id/colorPicker"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/color_picker" />

        </TableRow>

        <TableRow android:layout_weight="2">

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/precedent"
                android:onClick="precedent"
                android:scaleType="fitCenter"
                android:src="@drawable/precedent" />

            <TextView
                android:id="@+id/marque"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="MARQUE"
                android:textSize="40sp" />

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/suivant"
                android:onClick="suivant"
                android:scaleType="fitCenter"
                android:src="@drawable/suivant" />
        </TableRow>

    </TableLayout>

</LinearLayout>
