<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".police.BijouxPoliceActivity"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/bague"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@null"
            android:contentDescription="@string/bague"
            android:onClick="selectBague"
            android:scaleType="fitCenter"
            android:src="@drawable/bague" />

        <ImageButton
            android:id="@+id/collier"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@null"
            android:contentDescription="@string/collier"
            android:onClick="selectCollier"
            android:scaleType="fitCenter"
            android:src="@drawable/collier" />

        <ImageButton
            android:id="@+id/montre"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@null"
            android:contentDescription="@string/montre"
            android:onClick="selectMontre"
            android:scaleType="fitCenter"
            android:src="@drawable/montre" />

        <TextView
            android:text="Bague / chevaliÃ¨re"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_columnWeight="1" />

        <TextView
            android:text="Collier"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_columnWeight="1" />

        <TextView
            android:text="Montre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_columnWeight="1" />

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/or"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp" />

        <Button
            android:id="@+id/orRose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp" />

        <Button
            android:id="@+id/argent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp" />

        <Button
            android:id="@+id/noir"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp" />

    </GridLayout>
</LinearLayout>